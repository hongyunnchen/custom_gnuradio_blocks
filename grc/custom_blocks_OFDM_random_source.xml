<?xml version="1.0"?>
<block>
  <name>OFDM_random_source</name>
  <key>custom_blocks_OFDM_random_source</key>
  <category>custom_blocks</category>
  <import>import custom_blocks</import>
  <make>custom_blocks.OFDM_random_source($n_subcarriers, $allocation_vector, $n_cp)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Number of subcarriers</name>
    <key>n_subcarriers</key>
    <value>256</value>
    <type>int</type>
  </param>
  <param>
    <name>Active subcarriers</name>
    <key>allocation_vector</key>
    <value>range(-16,16)</value>
    <type>int_vector</type>
  </param>
  <param>
    <name>CP length</name>
    <key>n_cp</key>
    <value>32</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
